{
  "manifest_version": 3,
  "name": "School Co-Pilot",
  "version": "1.0.0",
  "description": "Privacy-focused educational assistant that helps students learn using only school-approved documents. Teachers maintain complete control over access and content.",
  
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "sidePanel",
    "commands"
  ],
  
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*.edu/*"
  ],
  
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "School Co-Pilot",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  
  "commands": {
    "open_copilot": {
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Open School Co-Pilot assistant"
    },
    "quick_define": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Define selected text"
    },
    "quick_explain": {
      "suggested_key": {
        "default": "Alt+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Explain selected text"
    }
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  
  "minimum_chrome_version": "116"
}